@{
    ViewData["Title"] = "Movie Form";
}

@model Mission6_Katiew8.Models.MovieResponse

<h1>Movie Form</h1>

<div>
    <form method="post">



        <label asp-for="Title"> Movie Title: </label>
        <input asp-for="Title" /><br />

        <label asp-for="Category">Movie Category:</label>
        <input asp-for="Category" /><br />

        <label asp-for="Year"> Movie Release Year: </label>
        <input asp-for="Year" /><br />

        <label asp-for="Director"> Movie Director: </label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating"> Movie Rating: </label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited"> Edited Movie: </label>
        <select asp-for="Edited">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br />

        <label asp-for="LentTo"> Movie Lent To: </label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes"> Movie Notes: </label>
        <input asp-for="Notes" /><br />

        <button type="submit"> Submit Movie</button>
    </form>
</div>

